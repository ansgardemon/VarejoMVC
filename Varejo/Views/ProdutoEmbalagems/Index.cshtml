@model IEnumerable<Varejo.Models.ProdutoEmbalagem>

<div class="table-responsive" style="border-radius: 12px; overflow: hidden;">

	<table class="w-100">
		<thead>
			<tr>
				<th>Produto</th>
				<th>Tipo Embalagem</th>
				<th>Preço</th>
				<th>Ean</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td data-label="Complemento">@item.Produto?.Complemento</td>
					<td data-label="Tipo de Embalagem">@item.TipoEmbalagem?.DescricaoTipoEmbalagem</td>
					<td data-label="Preço">@item.Preco</td>
					<td data-label="EAN">@item.Ean</td>
					<td data-label="Ações">
						@Html.ActionLink("Edit", "Edit", new { id = item.IdProdutoEmbalagem }) |
						@Html.ActionLink("Details", "Details", new { id = item.IdProdutoEmbalagem }) |
						@Html.ActionLink("Delete", "Delete", new { id = item.IdProdutoEmbalagem })
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>