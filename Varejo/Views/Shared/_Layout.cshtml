<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Varejo</title>
	<script type="importmap"></script>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/morph.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/liquidGlass.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Varejo.styles.css" asp-append-version="true" />
</head>
<body class="w-100 page-bg">
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-lightaccept-policy border-bottom box-shadow mb-3 w-75 mx-auto">
			<div class="container-fluid m-auto w-100">
				<a class="navbar-brand rounded-circle img-fluid mx-auto b-block" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/logo_zeus.png" /></a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex">
					<ul class="navbar-nav flex-grow-1 fs-4 fw-bold">
						<li class="nav-item tetx-white">
							<a class="nav-link" asp-area="" asp-controller="Pessoa" asp-action="Index">Pessoa</a>
						</li>
						<li class="nav-item tetx-white">
							<a class="nav-link" asp-area="" asp-controller="Categoria" asp-action="Index">Categoria</a>
						</li>
						<li class="nav-item tetx-white">
							<a class="nav-link" asp-area="" asp-controller="Marca" asp-action="Index">Marca</a>
						</li>

						<li class="nav-item tetx-white">
							<a class="nav-link" asp-area="" asp-controller="Familia" asp-action="Index">Familia</a>
						</li>
						<li class="nav-item tetx-white">
							<a class="nav-link" asp-area="" asp-controller="TipoEmbalagem" asp-action="Index">Embalagem</a>
						</li>
						<li class="nav-item tetx-white">
							<a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Index">Usuario</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<div class="container mb-5 pb-3">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted text-center mx-auto bottom-0">
		<div class="container">
			&copy; 2025 - Varejo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
