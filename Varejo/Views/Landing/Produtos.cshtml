@{
	Layout = null;
	ViewData["Title"] = "Produtos - Adega Dose Certa";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<title>@ViewData["Title"]</title>

	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
	<link href="~/css/landing.css" rel="stylesheet" />
</head>

<body>
	<!-- Navbar-->
	<nav class="navbar navbar-expand-lg navbar-dark bg-wine shadow-sm fixed-top">
		<div class="container">
			<a class="navbar-brand fw-bold" href="/">
				<img src="~/img/LogoDoseCerta1.png" alt="Logo" class="d-inline-block align-text-center me-2 logo" style="height: 75px; border-radius: 50%;" />
			</a>

			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse justify-content-end" id="navbarNav">
				<ul class="navbar-nav">
					<li class="nav-item"><a class="nav-link" href="/Landing/Index">Home</a></li>
					<li class="nav-item"><a class="nav-link" href="/Landing/Produtos">Catálogo</a></li>
					<li class="nav-item">
						<a class="nav-link btn-restrict" href="/Usuario/Login">Área Restrita</a>
					</li>
				</ul>
			</div>
		</div>
	</nav>

	<section class="py-5 mt-5">
		<div class="container">
			<h1 class="text-center my-4 fw-bold">Todos os Produtos</h1>

			<!-- Filtro rápido (template) -->
			<div class="mb-4 text-center">
				<select id="categoriaSelect" class="form-select d-inline-block w-auto me-2">
					<option value="">Todas as Categorias</option>
					<!-- As outras opções serão inseridas via AJAX -->
				</select>

				<select id="marcaSelect" class="form-select d-inline-block w-auto">
					<option value="">Todas as Marcas</option>
					<!-- As outras opções serão inseridas via AJAX -->
				</select>
			</div>


			<!-- Lista de produtos -->
			<div id="listaProdutos" class="row g-4">

				<!-- Os cards serão inseridos via AJAX -->
			</div>


			<!-- Paginação (template) -->
			<nav class="mt-5">
				<ul class="pagination paginacao justify-content-center">
					<li class="page-item disabled"><a class="page-link" href="#">Anterior</a></li>
					<li class="page-item active"><a class="page-link" href="#">1</a></li>
					<li class="page-item"><a class="page-link" href="#">2</a></li>
					<li class="page-item"><a class="page-link" href="#">3</a></li>
					<li class="page-item"><a class="page-link" href="#">Próximo</a></li>
				</ul>
			</nav>
		</div>
	</section>

	<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
	<script src="/js/produtos.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>