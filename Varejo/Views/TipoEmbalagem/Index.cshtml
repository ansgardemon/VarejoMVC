@model IEnumerable<Varejo.ViewModels.TipoEmbalagemViewModel>

@{
	ViewData["Title"] = "Tipos de Embalagem";
}

<h2>Tipos de Embalagem</h2>

<p>
	<a class="btn btn-primary" asp-action="Create">Nova Embalagem</a>
</p>

<div class="table-responsive" style="border-radius: 12px; overflow: hidden;">
	<table class="w-100">
		<thead>
			<tr>
				<th>#</th>
				<th>Descrição</th>
				<th>Multiplicador</th>
				<th>Ações</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var tipo in Model)
			{
				<tr>
					<td data-label="ID">@tipo.IdTipoEmbalagem</td>
					<td data-label="Descrição">@tipo.DescricaoTipoEmbalagem</td>
					<td data-label="Multiplicador">@tipo.Multiplicador</td>
					<td data-label="Ações">
						<a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@tipo.IdTipoEmbalagem">Editar</a>
						<a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@tipo.IdTipoEmbalagem">Excluir</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>