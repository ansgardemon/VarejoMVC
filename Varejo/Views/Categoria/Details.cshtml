@model Varejo.ViewModels.CategoriaViewModel

@{
	ViewData["Title"] = "Detalhes da Categoria";
}

<h2>Detalhes da Categoria</h2>

<div>
	<h4>@Model.DescricaoCategoria</h4>
	<dl class="row">
		<dt class="col-sm-2">ID</dt>
		<dd class="col-sm-10">@Model.IdCategoria</dd>

		<dt class="col-sm-2">Descrição</dt>
		<dd class="col-sm-10">@Model.DescricaoCategoria</dd>

		<dt class="col-sm-2">Quantidade de Famílias</dt>
		<dd class="col-sm-10">@Model.QuantidadeFamilia</dd>
	</dl>
</div>

@if (Model.Familias != null && Model.Familias.Any())
{
	<h3>Famílias</h3>
	<div class="table-responsive" style="border-radius: 12px; overflow: hidden;">
		<table class="w-100">
			<thead>
				<tr>
					<th>ID</th>
					<th>Descrição</th>
					<th>Status</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var familia in Model.Familias)
				{
					<tr>
						<td>@familia.IdFamilia</td>
						<td>@familia.NomeFamilia</td>
						<td>@(familia.Ativo ? "✅" : "❌")</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
}
else
{
	<p>Nenhuma família cadastrada nesta categoria.</p>
}

<p>
	<a class="btn btn-secondary" asp-action="Index">Voltar</a>
</p>
