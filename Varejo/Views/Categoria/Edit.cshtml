@model Varejo.ViewModels.CategoriaViewModel



@{
    ViewData["Title"] = "Editar Categoria";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-warning text-dark">
            <h5 class="mb-0">@ViewData["Title"]</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="IdCategoria" />

                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="DescricaoCategoria" class="form-label"></label>
                    <input asp-for="DescricaoCategoria" class="form-control" />
                    <span asp-validation-for="DescricaoCategoria" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Voltar
                    </a>
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-pencil-square"></i> Atualizar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
