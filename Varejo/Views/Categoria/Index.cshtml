@model IEnumerable<Varejo.ViewModels.CategoriaViewModel>

@{
    ViewData["Title"] = "Categorias";
}

<h2>Categorias</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Nova Categoria</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Descrição</th>
            <th>Quantidade de Produtos</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var categoria in Model)
        {
            <tr>
                <td>@categoria.IdCategoria</td>
                <td>@categoria.DescricaoCategoria</td>
                <td>@categoria.QuantidadeFamilia</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@categoria.IdCategoria">Detalhes</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@categoria.IdCategoria">Editar</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@categoria.IdCategoria">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
