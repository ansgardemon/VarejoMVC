@model Varejo.ViewModels.TipoMovimentoViewModel

@{
    ViewData["Title"] = "Novo Tipo de Movimento";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">@ViewData["Title"]</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="DescricaoTipoMovimento" class="form-label"></label>
                    <input asp-for="DescricaoTipoMovimento" class="form-control" placeholder="Digite o tipo de movimento..." />
                    <span asp-validation-for="DescricaoTipoMovimento" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="IdEspecieMovimento" class="form-label">Espécie de Movimento</label>
                    <select asp-for="IdEspecieMovimento" class="form-select" 
                            asp-items="@(ViewBag.Especies != null ? new SelectList(ViewBag.Especies, "IdEspecieMovimento", "DescricaoEspecieMovimento") : null)">
                        <option value="">-- Selecione --</option>
                    </select>
                    <span asp-validation-for="IdEspecieMovimento" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Voltar
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Salvar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
