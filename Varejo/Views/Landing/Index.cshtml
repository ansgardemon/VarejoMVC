@{
    Layout = null;
    ViewData["Title"] = "Adega Dose Certa";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/landing.css" rel="stylesheet" />
</head>

<body>

    <!-- Navbar exclusiva da landing -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-wine shadow-sm fixed-top">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">
                <img src="~/img/logo.png" alt="Logo" width="45" height="45" class="d-inline-block align-text-center me-2" />
                Adega Dose Certa
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="/Landing/Produtos">Catálogo</a></li>
                    <li class="nav-item">
                        <a class="btn btn-outline-gold ms-2" href="/Usuario/Login">Área Restrita</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero -->
    <section class="hero-section text-light text-center d-flex align-items-center">
        <div class="container">
            <h1 class="display-4 fw-bold mb-3">Celebre o frango bovinho</h1>
            <p class="lead mb-4">Olha a banana.</p>
            <a href="/Landing/Produtos" class="btn btn-gold btn-lg px-4">Ver Catálogo</a>
        </div>
    </section>

    <!-- Produtos -->
    <section id="produtos" class="py-5">
        <div class="container">
            <h2 class="text-center mb-4 fw-semibold">Produtos em Destaque</h2>
            <div class="row g-4">
                @for (int i = 0; i < 4; i++)
                {
                    <div class="col-md-3">
                        <div class="card h-100 shadow-sm border-0">
                            <img src="https://placehold.co/400x300?text=Vinho+@i" class="card-img-top" alt="Produto @i" />
                            <div class="card-body text-center">
                                <h5 class="card-title">Vinho Reserva @i</h5>
                                <p class="text-muted">R$ @(79 + i * 5),90</p>
                                <a href="#" class="btn btn-outline-wine w-100">Ver detalhes</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- Marcas -->
    <section id="marcas" class="bg-beige py-5">
        <div class="container text-center">
            <h2 class="fw-semibold mb-4">Nossas Marcas</h2>
            <div class="d-flex flex-wrap justify-content-center gap-4">
                @for (int i = 1; i <= 6; i++)
                {
                    <div class="brand-card p-3">
                        <img src="https://placehold.co/120x80?text=Marca+@i" alt="Marca @i" class="img-fluid" />
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- Categorias -->
    <section id="categorias" class="py-5">
        <div class="container">
            <h2 class="text-center mb-4 fw-semibold">Categorias</h2>
            <div class="row g-4">
                @foreach (var categoria in new[] { "Tintos", "Brancos", "Rosés", "Espumantes", "Destilados", "Sobremesa" })
                {
                    <div class="col-md-4">
                        <div class="card border-0 shadow-sm text-center h-100 category-card">
                            <div class="card-body">
                                <h5 class="card-title">@categoria</h5>
                                <p class="card-text text-muted">Explore nossa seleção de @categoria.ToLower().</p>
                                <a href="#" class="btn btn-outline-wine">Ver mais</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- Instagram -->
    <section id="instagram" class="bg-beige py-5">
        <div class="container text-center">
            <h2 class="fw-semibold mb-4">Siga-nos no Instagram</h2>
            <p class="text-muted mb-4">@@adegadosecertaofc</p>

            <div class="d-flex flex-wrap justify-content-center gap-4">
                <blockquote class="instagram-media" data-instgrm-permalink="https://www.instagram.com/p/C8abcdefg/" data-instgrm-version="14" style="max-width:320px;min-width:200px;margin:0 auto;"></blockquote>
                <blockquote class="instagram-media" data-instgrm-permalink="https://www.instagram.com/p/C7abcdefg/" data-instgrm-version="14" style="max-width:320px;min-width:200px;margin:0 auto;"></blockquote>
            </div>

            <p class="mt-4">
                <a href="https://www.instagram.com/adegadosecertaofc/" target="_blank" class="btn btn-gold">
                    Ver no Instagram
                </a>
            </p>
        </div>
    </section>

    <!-- Rodapé -->
    <footer class="bg-wine text-light text-center py-5 mt-5">
        <div class="container">
            <h5 class="mb-3">Nossa Localização</h5>
            <div class="ratio ratio-16x9 mb-4">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d150605.70877180065!2d-46.58129940273437!3d-23.516734199999995!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94ce640865f33f89%3A0xd0f282833fa65612!2sAdega%20Dose%20Certa!5e1!3m2!1sen!2sbr!4v1760706842690!5m2!1sen!2sbr"
                        style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>

            <p class="mb-0">© 2025 Adega Dose Certa — Todos os direitos reservados.</p>
            <small class="text-muted">Desenvolvido por Vitrin.o</small>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script async src="//www.instagram.com/embed.js"></script>
</body>
</html>
