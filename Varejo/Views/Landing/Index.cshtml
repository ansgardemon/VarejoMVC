@{
	Layout = null;
	ViewData["Title"] = "Adega Dose Certa";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<title>@ViewData["Title"]</title>

	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css" />
	<link href="~/css/landing.css" rel="stylesheet" />
</head>

<body>

	<!-- Navbar-->
	<nav class="navbar navbar-expand-lg navbar-dark bg-wine shadow-sm fixed-top">
		<div class="container">
			<a class="navbar-brand fw-bold" href="/">
				<img src="~/img/LogoDoseCerta1.png" alt="Logo" class="d-inline-block align-text-center me-2 logo" style="height: 75px; border-radius: 50%; cursor: pointer" />
			</a>

			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse justify-content-end" id="navbarNav">
				<ul class="navbar-nav">
					<li class="nav-item"><a class="nav-link" href="/Landing/Index">Home</a></li>
					<li class="nav-item"><a class="nav-link" href="/Landing/Produtos">Catálogo</a></li>
					<li class="nav-item">
						<a class="nav-link btn-restrict" href="/Usuario/Login">Área Restrita</a>
					</li>
				</ul>
			</div>
		</div>
	</nav>


	<!-- Banner -->
	<section class="hero-section">
		<div class="hero-bg"></div>
		<div class="hero-overlay"></div>
		<div class="hero-content container">
			<h1 class="display-1 home">Celebre com um drink.</h1>
		</div>
	</section>


	<!-- Produtos -->
	<section id="produtos" class="py-5">
		<div class="container">
			<h2 class="text-center mb-4 fw-semibold">Produtos em Destaque</h2>
			<div class="row g-4" id="produtosContainer">
				<!-- Os cards serão carregados via AJAX -->
			</div>
		</div>
	</section>


	<!-- Marcas -->
	<section id="marcas" class="py-5">
		<div class="container text-center">
			<h2 class="fw-semibold mb-4">Nossas Marcas</h2>
			<div id="marcasContainer" class="brand-carousel">
				<!-- Marcas via AJAX -->
			</div>
		</div>
	</section>



	<!-- Categorias -->
	<section id="categorias" class="py-5">
		<div class="container">
			<h2 class="text-center mb-4 fw-semibold">Categorias</h2>
			<div class="row g-4" id="categoriasContainer">
				<!-- Os cards serão inseridos via AJAX -->
			</div>
		</div>
	</section>


	<!-- Instagram -->
	<section id="instagram" class="py-5 mx-auto container" style="border-radius:12px; position:relative; padding:2rem; background:#FFF; overflow:hidden;">

		<!-- Borda degradê estilo Instagram -->
		<div style="
        position:absolute;
        top:0; left:0; right:0; bottom:0;
        padding:3px;
        border-radius:12px;
        background: linear-gradient(45deg, #f09433, #e6683c, #dc2743, #cc2366, #bc1888);
        -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
        -webkit-mask-composite: xor;
        mask-composite: exclude;
        pointer-events:none;
  "></div>

		<!-- Conteúdo real -->
		<div class="container text-center" style="position:relative; z-index:1;">
			<h2 class="fw-semibold mb-4" style="color:#6D213C;">Siga-nos no Instagram</h2>

			<iframe src="//lightwidget.com/widgets/aef34cbe522c597eaeca62387a876cb0.html"
					scrolling="no" allowtransparency="true"
					class="lightwidget-widget p-3"
					style="width:100%; border:0; overflow:hidden; border-radius:8px;">
			</iframe>
		</div>
	</section>



	<!-- Rodapé -->
	<footer class="text-center mt-5" style="color:#FBF5E8; background: linear-gradient(135deg, #6D213C, #3e1021);">
		<div class="container" style="color:#FBF5E8; padding-top: 50px;">
			<h4 class="mb-3">Nossa Localização</h4>
			<div class="ratio ratio-16x9 mb-4">
				<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d150605.70877180065!2d-46.58129940273437!3d-23.516734199999995!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94ce640865f33f89%3A0xd0f282833fa65612!2sAdega%20Dose%20Certa!5e1!3m2!1sen!2sbr!4v1760706842690!5m2!1sen!2sbr"
						style="border:2px solid #3e1021; border-radius: 12px;" allowfullscreen="" loading="lazy"></iframe>
			</div>
			<div>

				<p style="color: #FBF5E8;" class="mb-0">© 2025 Adega Dose Certa — Todos os direitos reservados.</p>
				<p style="color: #FBF5E8;" class="mb-0">Desenvolvido por Vitrin.o</p>
			</div>
		</div>
	</footer>


	<script src="https://cdn.lightwidget.com/widgets/lightwidget.js"></script>

	<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
	<script src="/js/landing.js"></script>


	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
	<script async src="//www.instagram.com/embed.js"></script>
</body>
</html>