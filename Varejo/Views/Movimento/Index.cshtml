@model IEnumerable<Varejo.Models.Movimento>

@{
	ViewData["Title"] = "Movimentos";
}

<h1>Movimentos</h1>

<div class="table-responsive" style="border-radius: 12px; overflow: hidden;">
	<table class="w-100">
		<thead class="table-dark">
			<tr>
				<th>Número do Documento</th>
				<th>Data do Movimento</th>
				<th>Tipo de Movimento</th>
				<th>Cliente/Fornecedor</th>
				<th>Total de Produtos</th>
				<th>Ações</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var movimento in Model)
			{
				<tr>
					<td data-label="Documento">@movimento.Documento</td>
					<td data-label="Data">@movimento.DataMovimento.ToString("dd/MM/yyyy HH:mm")</td>
					<td data-label="Tipo">@movimento.TipoMovimento?.DescricaoTipoMovimento</td>
					<td data-label="Pessoa">@movimento.Pessoa?.NomeRazao</td>
					<td data-label="Qtd Produtos">@(movimento.ProdutosMovimento?.Count() ?? 0)</td>
					<td data-label="Ações">
						<a class="btn btn-info btn-sm" href="@Url.Action("Details", "Movimento", new { id = movimento.IdMovimento })">Detalhes</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

<a class="btn btn-success mt-3" href="@Url.Action("Create", "Movimento")">Novo Movimento</a>
