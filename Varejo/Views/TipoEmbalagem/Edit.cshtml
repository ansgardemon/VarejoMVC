@model Varejo.ViewModels.TipoEmbalagemViewModel

@{
    ViewData["Title"] = "Editar Tipo de Embalagem";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-warning text-dark">

            @if (ViewData["EditError"] != null)
            {
                <div class="alert alert-danger mt-3">
                    @ViewData["EditError"]
                </div>
            }


            <h5 class="mb-0">@ViewData["Title"]</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="IdTipoEmbalagem" />

                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="DescricaoTipoEmbalagem" class="form-label"></label>
                    <input asp-for="DescricaoTipoEmbalagem" class="form-control" placeholder="Digite a descrição..." />
                    <span asp-validation-for="DescricaoTipoEmbalagem" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Multiplicador" class="form-label"></label>
                    <input asp-for="Multiplicador" class="form-control" placeholder="Digite o multiplicador..." />
                    <span asp-validation-for="Multiplicador" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Voltar
                    </a>
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-pencil-square"></i> Atualizar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
