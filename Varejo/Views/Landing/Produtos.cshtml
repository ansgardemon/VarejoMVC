@{
    Layout = null;
    ViewData["Title"] = "Produtos - Adega Dose Certa";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/landing.css" rel="stylesheet" />
</head>

<body>
    <!-- Navbar exclusiva da landing -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-wine shadow-sm fixed-top">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">
                <img src="~/img/logo.png" alt="Logo" width="45" height="45" class="d-inline-block align-text-center me-2" />
                Adega Dose Certa
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="/Landing/Produtos">Catálogo</a></li>
                    <li class="nav-item">
                        <a class="btn btn-outline-gold ms-2" href="/Usuario/Login">Área Restrita</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <section class="py-5 mt-5">
        <div class="container">
            <h1 class="text-center mb-4 fw-bold">Todos os Produtos</h1>

            <!-- Filtro rápido (template) -->
            <div class="mb-4 text-center">
                <select class="form-select d-inline-block w-auto me-2">
                    <option value="">Todas as Categorias</option>
                    <option value="Tintos">Tintos</option>
                    <option value="Brancos">Brancos</option>
                    <option value="Rosés">Rosés</option>
                    <option value="Espumantes">Espumantes</option>
                    <option value="Destilados">Destilados</option>
                    <option value="Sobremesa">Sobremesa</option>
                </select>

                <select class="form-select d-inline-block w-auto">
                    <option value="">Todas as Marcas</option>
                    <option value="Marca 1">Marca 1</option>
                    <option value="Marca 2">Marca 2</option>
                    <option value="Marca 3">Marca 3</option>
                </select>
            </div>

            <!-- Lista de produtos -->
            <div class="row g-4">
                @for (int i = 1; i <= 12; i++)
                {
                    <div class="col-md-3">
                        <div class="card h-100 shadow-sm border-0">
                            <img src="https://placehold.co/400x300?text=Produto+@i" class="card-img-top" alt="Produto @i" />
                            <div class="card-body text-center">
                                <h5 class="card-title">Produto @i</h5>
                                <p class="text-muted">R$ @(50 + i * 3),90</p>
                                <a href="#" class="btn btn-outline-wine w-100">Ver detalhes</a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Paginação (template) -->
            <nav class="mt-5">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled"><a class="page-link" href="#">Anterior</a></li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">Próximo</a></li>
                </ul>
            </nav>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
