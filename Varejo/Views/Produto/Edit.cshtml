@model Varejo.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Editar Produto";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-warning text-white">
            <h5 class="mb-0">@ViewData["Title"]</h5>
        </div>
        <div class="card-body">
            <form id="produto-form" asp-action="Edit" enctype="multipart/form-data" method="post">
                <input type="hidden" asp-for="IdProduto" />
                <input type="hidden" asp-for="FamiliaId" />

                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label class="form-label">Nome da Família</label>
                    <input class="form-control" value="@Model.Familia?.NomeFamilia" disabled />
                </div>

                <div class="mb-3">
                    <label asp-for="Complemento" class="form-label"></label>
                    <input asp-for="Complemento" class="form-control" />
                    <span asp-validation-for="Complemento" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImagemUpload" class="form-label">Imagem do Produto</label>
                    <input asp-for="ImagemUpload" class="form-control" type="file" />
                    <span asp-validation-for="ImagemUpload" class="text-danger"></span>
                </div>

                @if (!string.IsNullOrEmpty(Model.UrlImagem))
                {
                    <div class="mb-3">
                        <label class="form-label">Imagem Atual</label><br />
                        <img src="@Url.Content(Model.UrlImagem)" alt="@Model.NomeProduto" class="img-thumbnail" style="max-width: 200px; height:auto;" />
                    </div>
                }

                <div class="mb-3">
                    <label class="card check p-3 text-center ativo-btn mb-2">
                        <input asp-for="Ativo" class="form-check-input d-none" type="checkbox" />
                    </label>
                </div>

                <h4>Embalagens</h4>
                <div id="embalagens-container">
                    @if (Model.Embalagens != null && Model.Embalagens.Any())
                    {
                        @for (int i = 0; i < Model.Embalagens.Count; i++)
                        {
                            var embalagem = Model.Embalagens[i];
                            <div class="embalagem-item mb-3 border p-2">
                                <label class="form-label">Tipo de Embalagem</label>
                                <select name="Embalagens[@i].TipoEmbalagemId" class="form-select">
                                    @if (embalagem.TiposEmbalagem != null)
                                    {
                                        foreach (var t in embalagem.TiposEmbalagem)
                                        {
                                            var selected = t.Value == embalagem.TipoEmbalagemId.ToString() ? "selected" : "";
                                            @:<option value="@t.Value" @selected>@t.Text</option>
                                        }
                                    }
                                </select>

                                <label class="form-label">Preço</label>
                                <input name="Embalagens[@i].Preco" class="form-control" value="@embalagem.Preco" />

                                <label class="form-label">EAN</label>
                                <input name="Embalagens[@i].Ean" class="form-control" value="@embalagem.Ean" />

                                <div class="mb-3 d-flex justify-content-end">
					                <button type="button" class="btn btn-danger mt-2 remover-embalagem">Remover</button>
				                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-muted">Nenhuma embalagem disponível.</div>
                    }
                </div>

                <div class="btns-endereco d-inline-flex" style="margin-left: 8px; transform: translateY(-82px)">
		            <button type="button" id="adicionar-embalagem" class="btn btn-success">+ Adicionar Embalagem</button>

		            <button type="submit" class="btn btn-primary">Atualizar Produto</button>
		
                    <a asp-action="Details" asp-controller="Familia" asp-route-id="@Model.FamiliaId" class="btn btn-secondary">Voltar</a>
	            </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var container = document.getElementById('embalagens-container');
            var tipos = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(
                (Model.Embalagens != null && Model.Embalagens.Any() && Model.Embalagens[0].TiposEmbalagem != null)
                    ? Model.Embalagens[0].TiposEmbalagem
                    : new List<SelectListItem>()
            ));

            // Adicionar nova embalagem
            document.getElementById('adicionar-embalagem').addEventListener('click', function () {
                var index = container.children.length;
                var options = tipos.map(t => `<option value="${t.Value}">${t.Text}</option>`).join('');

                var html = `
                    <div class="embalagem-item mb-3 border p-2">
                        <label>Tipo de Embalagem</label>
                        <select name="Embalagens[${index}].TipoEmbalagemId" class="form-select">${options}</select>

                        <label>Preço</label>
                        <input name="Embalagens[${index}].Preco" class="form-control" />

                        <label>EAN</label>
                        <input name="Embalagens[${index}].Ean" class="form-control" />

                        <div class="mb-3 d-flex justify-content-end">
					         <button type="button" class="btn btn-danger mt-2 remover-embalagem">Remover</button>
				        </div>
                    </div>
                `;

                container.insertAdjacentHTML('beforeend', html);
            });

            // Remover embalagem
            container.addEventListener('click', function (e) {
                if (e.target && e.target.classList.contains('remover-embalagem')) {
                    e.target.closest('.embalagem-item').remove();
                }
            });
        });
    </script>
}
