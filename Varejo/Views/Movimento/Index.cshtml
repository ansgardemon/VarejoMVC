@model IEnumerable<Varejo.Models.Movimento>

@{
    ViewData["Title"] = "Movimentos";
}

<h1>Movimentos</h1>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Número do Documento</th>
            <th>Data do Movimento</th>
            <th>Tipo de Movimento</th>
            <th>Cliente/Fornecedor</th>
            <th>Total de Produtos</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movimento in Model)
        {
            <tr>
                <td>@movimento.Documento</td>
                <td>@movimento.DataMovimento.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@movimento.TipoMovimento?.DescricaoTipoMovimento</td>
                <td>@movimento.Pessoa?.NomeRazao</td>
                <td>@(movimento.ProdutosMovimento?.Count() ?? 0)</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="@Url.Action("Details", "Movimento", new { id = movimento.IdMovimento })">Detalhes</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-success" href="@Url.Action("Create", "Movimento")">Novo Movimento</a>
