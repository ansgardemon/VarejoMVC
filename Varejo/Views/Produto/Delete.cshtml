@model Varejo.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Excluir Produto";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">@ViewData["Title"]</h5>
        </div>
        <div class="card-body">
            <h5>Você tem certeza que deseja excluir este produto?</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NomeProduto)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NomeProduto)</dd>
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Complemento)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Complemento)</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="IdProduto" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Details" asp-controller="Familia" asp-route-id="@Model.FamiliaId" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Excluir
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
